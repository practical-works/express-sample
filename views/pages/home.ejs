<!-- Hero -->
<section class="hero is-light">
  <!-- Hero-Body -->
  <form class="hero-body" method="post" action="/">
    <h1 class="title">Welcome</h1>
    <h2 class="subtitle">Please leave a feedback 😊</h2>
    <% if (success) { -%>
      <div class="notification is-success">
        Thank you for your feedback!
      </div>
    <% } -%>
    <% if (errors) { -%>
      <div class="notification is-danger">
        <% for (const error of errors) { -%>
          <p>• <%= error.msg %></p>
        <% } -%>
      </div>
    <% } -%>
    <div class="field">
      <div class="control">
        <input name="author" class="input" type="text" placeholder="👤 Name" />
      </div>
    </div>
    <div class="field">
      <div class="control">
        <textarea
          name="message"
          class="textarea"
          placeholder="💬 Message"
          rows="1"
        ></textarea>
      </div>
    </div>
    <div class="field is-grouped is-grouped-right">
      <div class="control">
        <button type="submit" class="button is-dark">✔️ Submit</button>
      </div>
    </div>
  </form>
</section>

<!-- Feedbacks -->
<section class="section">
  <% for (const feedback of feedbacks) { %>
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="/assets/image.jpg" />
      </p>
    </figure>
    <div class="media-content">
      <div class="content">
        <h1 class="title">
            <a href="/u/<%= feedback.author %>">
              👤 <%= feedback.author %>
            </a>
          </h1>
          <p class="subtitle">
            <%- feedback.message.replace(/\n/g, "<br />") %>
          </p>
      </div>
    </div>
  </article>
  <% } %>
</section>