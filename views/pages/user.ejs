<section class="section">
  <!-- User-Name -->
  <article class="media">
    <figure class="media-left">
      <p class="image is-128x128">
        <img src="/assets/image.jpg" />
      </p>
    </figure>
    <div class="media-content">
      <div class="content">
        <h1 class="title"><%= user.name %></h1>
        <p class="subtitle">
          ğŸ’¬ <%= user.messages.length %>
          <%= user.messages.length > 1 ? "feedbacks" : "feedback" %>
        </p>
      </div>
    </div>
  </article>
  <hr>

  <!-- User-Messages -->
  <% if (!user.messages.length) { -%>
    <div class="message">
      <div class="message-body">
        This user hasn't left any feedback.
      </div>
    </div>
  <% } -%>
  <% for (const message of user.messages) { -%>
    <article class="box">
      <p class="subtitle"><%= message %></p>
    </article>
  <% } -%>
</section>